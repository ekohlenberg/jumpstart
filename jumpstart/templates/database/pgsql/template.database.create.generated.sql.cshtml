

DROP DATABASE IF EXISTS @Model.Name WITH ( FORCE );

CREATE DATABASE @Model.Name
    WITH
    OWNER = @Model.Name
    ENCODING = 'UTF8'
    LC_COLLATE = 'C'
    LC_CTYPE = 'C'
    LOCALE_PROVIDER = 'libc'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1
    IS_TEMPLATE = False;
    
GRANT CONNECT ON DATABASE @Model.Name TO @Model.Name;
