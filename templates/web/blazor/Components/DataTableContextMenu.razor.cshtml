@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using System.Linq
@using System.Reflection

@@namespace @(Model.Namespace).Components

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                @@foreach (var property in GetDisplayProperties())
                {
                    <th>@@GetPropertyLabel(property)</th>
                }
                @@if (ShowActions)
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @@{
                var displayProps = GetDisplayProperties();
            }
            @@if (Data != null && Data.Any())
            {
                @@foreach (var item in Data)
                {
                    @@if (item == null)
                    {
                        <tr>
                            @@foreach (var property in GetDisplayProperties())
                            {
                                <td></td>
                            }
                            @@if (ShowActions)
                            {
                                <td></td>
                            }
                        </tr>
                    }
                    else
                    {
                        var rowId = GetRowId(item);
                        <tr @@oncontextmenu="@@(e => OnRowContextMenu(e, rowId))" @@oncontextmenu:preventDefault="true" class="ctx-row">
                            @@foreach (var property in GetDisplayProperties())
                            {
                                @@if (ImageColumns != null && ImageColumns.ContainsKey(property.Name))
                                {
                                    var imgProp = item.GetType().GetProperty(ImageColumns[property.Name]);
                                    var imgSrc = imgProp != null ? imgProp.GetValue(item)?.ToString() : "";
                                    var altText = GetPropertyValueSafely(item, property);
                                    <td>
                                        @@if (!string.IsNullOrEmpty(imgSrc))
                                        {
                                            <img src="@@imgSrc" alt="@@altText" title="@@altText" style="height:24px;" />
                                        }
                                        else
                                        {
                                            @@altText
                                        }
                                    </td>
                                }
                                else
                                {
                                    <td>@@GetPropertyValueSafely(item, property)</td>
                                }
                            }
                            @@if (ShowActions)
                            {
                                <td>
                                    @@if (OnEdit.HasDelegate)
                                    {
                                        <button class="btn btn-primary btn-sm" @@onclick="@@(() => OnEdit.InvokeAsync(item))">Edit</button>
                                    }
                                    @@if (OnDelete.HasDelegate)
                                    {
                                        <button class="btn btn-danger btn-sm ms-1" @@onclick="@@(() => OnDelete.InvokeAsync(item))">Delete</button>
                                    }
                                </td>
                            }
                        </tr>
                    }
                }
            }
            else if (Data == null)
            {
                <tr>
                    <td colspan="@@(GetDisplayProperties().Length + (ShowActions ? 1 : 0))" class="text-center text-muted">
                        Loading...
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="@@(GetDisplayProperties().Length + (ShowActions ? 1 : 0))" class="text-center text-muted">
                        No data available
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@@if (ShowAddButton && OnAdd.HasDelegate)
{
    <div class="mt-3">
        <button class="btn btn-primary" @@onclick="@@(() => OnAdd.InvokeAsync())">Add</button>
    </div>
}

@@if (_menuVisible && ContextMenuItems != null && ContextMenuItems.Count > 0)
{
    <div class="ctx-overlay" @@onclick="HideContextMenu"></div>
    <div class="ctx-menu" style="left: @@(_menuX)px; top: @@(_menuY)px;">
        @@foreach (var menuItem in ContextMenuItems)
        {
            var capturedItem = menuItem;
            <div class="ctx-menu-item" @@onclick="@@(() => InvokeContextAction(capturedItem))">
                @@capturedItem.Label
            </div>
        }
    </div>
}

<style>
    .ctx-row {
        cursor: context-menu;
    }

    .ctx-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 999;
        background: transparent;
    }

    .ctx-menu {
        position: fixed;
        z-index: 1000;
        background: #fff;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 2px 4px 12px rgba(0, 0, 0, 0.15);
        min-width: 160px;
        padding: 4px 0;
    }

    .ctx-menu-item {
        padding: 8px 16px;
        cursor: pointer;
        font-size: 0.9rem;
        white-space: nowrap;
        user-select: none;
    }

    .ctx-menu-item:hover {
        background-color: #0d6efd;
        color: #fff;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .table-responsive {
        margin-bottom: 1rem;
    }
</style>

@@code {
    [Parameter] public IEnumerable<object>? Data { get; set; }
    [Parameter] public Type? DataType { get; set; }
    [Parameter] public bool ShowActions { get; set; } = true;
    [Parameter] public bool ShowAddButton { get; set; } = true;
    [Parameter] public EventCallback<object> OnEdit { get; set; }
    [Parameter] public EventCallback<object> OnDelete { get; set; }
    [Parameter] public EventCallback OnAdd { get; set; }
    [Parameter] public List<ContextMenuItem> ContextMenuItems { get; set; } = new();
    [Parameter] public Dictionary<string, string>? ImageColumns { get; set; }
    [Parameter] public HashSet<string>? HiddenColumns { get; set; }

    private bool _menuVisible = false;
    private double _menuX = 0;
    private double _menuY = 0;
    private long _contextRowId = 0;

    private void OnRowContextMenu(MouseEventArgs e, long rowId)
    {
        _menuX = e.ClientX;
        _menuY = e.ClientY;
        _contextRowId = rowId;
        _menuVisible = true;
    }

    private void HideContextMenu()
    {
        _menuVisible = false;
    }

    private async Task InvokeContextAction(ContextMenuItem item)
    {
        _menuVisible = false;
        if (item.Action != null)
        {
            await item.Action(_contextRowId);
        }
    }

    private long GetRowId(object item)
    {
        if (item == null) return 0;
        var idProp = item.GetType().GetProperty("id");
        if (idProp != null)
        {
            var val = idProp.GetValue(item);
            if (val != null) return Convert.ToInt64(val);
        }
        return 0;
    }

    private System.Reflection.PropertyInfo[] GetDisplayProperties()
    {
        if (DataType == null && Data != null && Data.Any())
        {
            DataType = Data.First().GetType();
        }

        if (DataType != null)
        {
            var props = ReflectionHelper.GetDisplayProperties(DataType);
            if (HiddenColumns != null && HiddenColumns.Count > 0)
            {
                props = props.Where(p => !HiddenColumns.Contains(p.Name)).ToArray();
            }
            return props;
        }

        return new System.Reflection.PropertyInfo[0];
    }

    private string GetPropertyLabel(System.Reflection.PropertyInfo property)
    {
        return ReflectionHelper.GetPropertyLabel(property);
    }

    private string GetPropertyValueSafely(object obj, System.Reflection.PropertyInfo property)
    {
        try
        {
            if (obj == null) return string.Empty;

            var value = property.GetValue(obj);
            if (value == null) return string.Empty;

            if (value is DateTime dateValue && dateValue == DateTime.MinValue)
                return string.Empty;

            var stringValue = value.ToString();
            return stringValue == "{}" ? string.Empty : stringValue;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"DataTableContextMenu: Error getting property {property.Name}: {ex.Message}");
            return string.Empty;
        }
    }

    public class ContextMenuItem
    {
        public string Label { get; set; } = string.Empty;
        public Func<long, Task>? Action { get; set; }
    }
}
