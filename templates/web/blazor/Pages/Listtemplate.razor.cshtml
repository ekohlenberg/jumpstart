@@page "/@(Model.DomainVar)"
@@using System.Collections.Generic;
@@using @(Model.Namespace).Components;
@@inject HttpClient Http
@@inject IHttpClientFactory ClientFactory
@@inject NavigationManager Navigation
@@implements IAsyncDisposable
@@rendermode @@(new InteractiveWebAssemblyRenderMode(prerender: false))
@using jumpstart;


<PageTitle>@(Model.Label)</PageTitle>

<h1>@(Model.Label)</h1>

<p>This component demonstrates fetching @(Model.Label) data from the server.</p>

@@if (@(Model.DomainVar)List == null)
{
    <p><em>Loading...</em></p>
}
else
{
    Console.WriteLine($"ListTemplate: About to render DataTable with {@@@(Model.DomainVar)List.Length} items");
 
    
    <DataTable Data="&at;@(Model.DomainVar)List" 
               DataType="typeof(@(Model.DomainObj)View)" 
               ShowActions="true" 
               ShowAddButton="true"
               OnEdit="&at;OnEdit@(Model.DomainObj)"
               OnAdd="&at;OnAdd@(Model.DomainObj)" />
    
    Console.WriteLine($"ListTemplate: DataTable rendered");
}

@@code {
    protected  @(Model.DomainObj)View[]? @(Model.DomainVar)List;
    private HubConnection? _hubConnection;
    private string _domainObjectName = "@(Model.DomainObj)";
    private Dictionary<string, Dictionary<long, string>> enumData = new Dictionary<string, Dictionary<long, string>>();
    
    // Concurrency control for list updates
    private readonly SemaphoreSlim _listLock = new SemaphoreSlim(1, 1);
    private readonly Queue<PropertyUpdateMessage> _updateQueue = new Queue<PropertyUpdateMessage>();
    private CancellationTokenSource? _processorCts;

    protected override async Task OnInitializedAsync()
    {
        var remoteClient = ClientFactory.CreateClient("RemoteAPI");

        @(Model.DomainVar)List = await remoteClient.GetFromJsonAsync<@(Model.DomainObj)View[]>("api/@(Model.DomainVar)");
        
        Console.WriteLine($"ListTemplate: Loaded {@(Model.DomainVar)List?.Length ?? 0} @(Model.DomainVar) records");
        if (@(Model.DomainVar)List != null && @(Model.DomainVar)List.Length > 0)
        {
            Console.WriteLine($"ListTemplate: First item type: {@(Model.DomainVar)List[0].GetType().Name}");
        }

        // Initialize SignalR connection for real-time updates
        await InitializeSignalRConnection();
        await InitEnumData();
        
        // Start the background queue processor
        _processorCts = new CancellationTokenSource();
        _ = ProcessQueueAsync(_processorCts.Token);
    }

    private async Task ProcessQueueAsync(CancellationToken cancellationToken)
    {
        try
        {
            while (!cancellationToken.IsCancellationRequested)
            {
                PropertyUpdateMessage? message = null;
                
                // Dequeue one message at a time
                lock (_updateQueue)
                {
                    if (_updateQueue.Count > 0)
                    {
                        message = _updateQueue.Dequeue();
                    }
                }
                
                if (message != null)
                {
                    // Acquire lock and process the update serially
                    await _listLock.WaitAsync(cancellationToken);
                    try
                    {
                        await HandlePropertyUpdate(message);
                    }
                    finally
                    {
                        _listLock.Release();
                    }
                }
                else
                {
                    // No messages, wait a bit before checking again
                    await Task.Delay(50, cancellationToken);
                }
            }
        }
        catch (OperationCanceledException)
        {
            Console.WriteLine($"ListTemplate: Queue processor cancelled");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ListTemplate: Error in queue processor: {ex.Message}");
        }
    }

    private async Task InitializeSignalRConnection()
    {
        try
        {
            // Create hub connection to the notification hub (API server)
            var remoteClient = ClientFactory.CreateClient("RemoteAPI");
            var baseAddress = remoteClient.BaseAddress?.ToString() ?? "http://localhost:5200";
            var hubUrl = $"{baseAddress.TrimEnd('/')}/notificationHub";
            
            _hubConnection = new HubConnectionBuilder()
                .WithUrl(hubUrl)
                .Build();

            // Handle PropertyUpdated messages
            _hubConnection.On<PropertyUpdateMessage>("PropertyUpdated", async (message) =>
            {
                Console.WriteLine($"ListTemplate: Received update notification for {message.DomainObjectName}[{message.InstanceId}]");
                
                if (message.DomainObjectName == _domainObjectName)
                {
                    // Enqueue the message instead of processing immediately
                    lock (_updateQueue)
                    {
                        _updateQueue.Enqueue(message);
                    }
                    Console.WriteLine($"ListTemplate: Queued update for {_domainObjectName}[{message.InstanceId}], queue length: {_updateQueue.Count}");
                }
            });

            // Start the connection
            await _hubConnection.StartAsync();
            Console.WriteLine($"ListTemplate: SignalR connection started");

            // Subscribe to domain object updates
            await _hubConnection.InvokeAsync("SubscribeToDomainObject", _domainObjectName);
            Console.WriteLine($"ListTemplate: Subscribed to {_domainObjectName} updates");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ListTemplate: Error initializing SignalR connection: {ex.Message}");
        }
    }

    private async Task InitEnumData()
    {
        var remoteClient = ClientFactory.CreateClient("RemoteAPI");
        @{
            foreach (var enumAttribute in Model.EnumAttributes)
            {
                var enumObjectDomainVar = enumAttribute.EnumAttribute.FkObject.ToLower();
                var enumIdColumn = enumAttribute.idColumn;
           
            <text>
                var enum@(enumIdColumn)Result = await remoteClient.GetFromJsonAsync&lt;List&lt;EnumHelper&gt;&gt;($"api/@((enumObjectDomainVar).ToLower())/enum");
                if (enum@(enumIdColumn)Result != null)
                {
                    enumData["@(enumIdColumn)"] = enum@(enumIdColumn)Result.ToDictionary(e => e.id, e => e.rwkString);
                }
             </text>
                
            }
        }
    }

    private async Task HandlePropertyUpdate(PropertyUpdateMessage message)
    {
        try
        {
            Console.WriteLine($"[HandlePropertyUpdate START] Processing update for {_domainObjectName}[{message.InstanceId}]");
            
            if (@(Model.DomainVar)List == null)
            {
                Console.WriteLine($"[HandlePropertyUpdate] ERROR: List is null, returning");
                return;
            }

            Console.WriteLine($"[HandlePropertyUpdate] Current list state BEFORE update: Length={@(Model.DomainVar)List.Length}, IDs=[{string.Join(", ", @(Model.DomainVar)List.Select(x => x.id))}]");

            // Find the item in the list by ID
            var index = Array.FindIndex(@(Model.DomainVar)List, item => item.id == message.InstanceId);
            Console.WriteLine($"[HandlePropertyUpdate] Found item at index: {index}");
            
            if (index >= 0)
            {
                // Fetch the updated item from the API to ensure we have the complete View object
                // with all computed properties and enum display values properly populated
                var remoteClient = ClientFactory.CreateClient("RemoteAPI");
                Console.WriteLine($"[HandlePropertyUpdate] Fetching updated object from API: api/@(Model.DomainVar)/view/{message.InstanceId}");
                var updatedObject = await remoteClient.GetFromJsonAsync<@(Model.DomainObj)View>($"api/@(Model.DomainVar)/view/{message.InstanceId}");
                
                if (updatedObject != null)
                { 
                    Console.WriteLine($"[HandlePropertyUpdate] API returned object with id={updatedObject.id}");
                @{
                    foreach( var enumAttribute in Model.EnumAttributes)
                    {
                        <text>
                        //if (enumData.ContainsKey("@(enumAttribute.idColumn)") && enumData["@(enumAttribute.idColumn)"].ContainsKey(updatedObject.@(enumAttribute.idColumn)))
                        //updatedObject.@(enumAttribute.nameColumn) = enumData["@(enumAttribute.idColumn)"][updatedObject.@(enumAttribute.idColumn)];
                        </text>
                    }
                }

               
                    // Update existing item with the fetched object under lock (enum display values are already set by the API)
                    @(Model.DomainVar)List[index] = updatedObject;
                    Console.WriteLine($"[HandlePropertyUpdate] Updated list[{index}] with object id={updatedObject.id}");
                    Console.WriteLine($"[HandlePropertyUpdate] List state AFTER update: Length={@(Model.DomainVar)List.Length}, IDs=[{string.Join(", ", @(Model.DomainVar)List.Select(x => x.id))}]");
                    
                    // Notify UI to update
                    Console.WriteLine($"[HandlePropertyUpdate] Calling StateHasChanged");
                    await InvokeAsync(StateHasChanged);
                    Console.WriteLine($"[HandlePropertyUpdate] StateHasChanged completed");
                }
                else
                {
                    Console.WriteLine($"[HandlePropertyUpdate] ERROR: API returned null for id={message.InstanceId}");
                }
            }
            else
            {
                // Item not found, might be a new item - reload the list
                Console.WriteLine($"[HandlePropertyUpdate] Item not found at any index, triggering full reload");
                await ReloadList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[HandlePropertyUpdate] EXCEPTION: {ex.GetType().Name}: {ex.Message}");
            Console.WriteLine($"[HandlePropertyUpdate] StackTrace: {ex.StackTrace}");
            // On error, fall back to reloading the entire list
            try
            {
                Console.WriteLine($"[HandlePropertyUpdate] Attempting ReloadList due to exception");
                await ReloadList();
            }
            catch (Exception reloadEx)
            {
                Console.WriteLine($"[HandlePropertyUpdate] ReloadList also failed: {reloadEx.Message}");
            }
        }
        Console.WriteLine($"[HandlePropertyUpdate END]");
    }

    private async Task ReloadList()
    {
        try
        {
            Console.WriteLine($"[ReloadList START] Reloading full list for {_domainObjectName}");
            
            if (@(Model.DomainVar)List != null)
            {
                Console.WriteLine($"[ReloadList] Current list state BEFORE reload: Length={@(Model.DomainVar)List.Length}, IDs=[{string.Join(", ", @(Model.DomainVar)List.Select(x => x.id))}]");
            }
            else
            {
                Console.WriteLine($"[ReloadList] Current list is null");
            }
            
            var remoteClient = ClientFactory.CreateClient("RemoteAPI");
            Console.WriteLine($"[ReloadList] Fetching from api/@(Model.DomainVar)");
            var newList = await remoteClient.GetFromJsonAsync<@(Model.DomainObj)View[]>("api/@(Model.DomainVar)");
            
            Console.WriteLine($"[ReloadList] API returned list with {newList?.Length ?? 0} items");
            if (newList != null && newList.Length > 0)
            {
                Console.WriteLine($"[ReloadList] New list IDs=[{string.Join(", ", newList.Select(x => x.id))}]");
            }
            
            @(Model.DomainVar)List = newList;
            Console.WriteLine($"[ReloadList] List assigned, Length={@(Model.DomainVar)List?.Length ?? 0}");
            Console.WriteLine($"[ReloadList] List state AFTER reload: Length={@(Model.DomainVar)List?.Length ?? 0}, IDs=[{string.Join(", ", @(Model.DomainVar)List?.Select(x => x.id) ?? new long[0])}]");
            
            Console.WriteLine($"[ReloadList] Calling StateHasChanged");
            await InvokeAsync(StateHasChanged);
            Console.WriteLine($"[ReloadList] StateHasChanged completed");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[ReloadList] EXCEPTION: {ex.GetType().Name}: {ex.Message}");
            Console.WriteLine($"[ReloadList] StackTrace: {ex.StackTrace}");
        }
        Console.WriteLine($"[ReloadList END]");
    }

    async Task OnAdd@(Model.DomainObj)()
    {
        Navigation.NavigateTo("edit-@(Model.DomainVar)");
    }

    async Task OnEdit@(Model.DomainObj)(object item)
    {
        var @(Model.DomainVar) = (@(Model.DomainObj)View)item;
        Navigation.NavigateTo($"edit-@(Model.DomainVar)/{@(Model.DomainVar).id}");
    }

    public async ValueTask DisposeAsync()
    {
        // Stop the queue processor
        if (_processorCts is not null)
        {
            _processorCts.Cancel();
            _processorCts.Dispose();
        }
        
        if (_hubConnection is not null)
        {
            try
            {
                // Unsubscribe from domain object updates
                await _hubConnection.InvokeAsync("UnsubscribeFromDomainObject", _domainObjectName);
                Console.WriteLine($"ListTemplate: Unsubscribed from {_domainObjectName} updates");
                
                // Stop the connection
                await _hubConnection.StopAsync();
                await _hubConnection.DisposeAsync();
                Console.WriteLine($"ListTemplate: SignalR connection disposed");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"ListTemplate: Error disposing SignalR connection: {ex.Message}");
            }
        }
        
        _listLock.Dispose();
    }

    // Message structure for property update notifications (matches server-side PropertyUpdateMessage)
    private class PropertyUpdateMessage
    {
        public string DomainObjectName { get; set; } = string.Empty;
        public long InstanceId { get; set; }
        public string JsonData { get; set; } = string.Empty;
        public DateTime Timestamp { get; set; }
    }
}
