        /// <summary>
        /// Processes all queued executions
        /// </summary>
        public static async Task ProcessQueueAsync()
        {
            lock (_queueLock)
            {
                if (_isProcessing)
                {
                    Console.WriteLine("AgentCoreLogic: Queue is already being processed");
                    return;
                }
                _isProcessing = true;
            }

            try
            {
                Console.WriteLine($"AgentCoreLogic: Starting to process {_executionQueue.Count} executions");
                
                while (_executionQueue.TryDequeue(out long executionId))
                {
                    try
                    {
                        var agentLogic = new AgentCoreLogic();
                        agentLogic.ExecuteScript(executionId);
                        Console.WriteLine($"AgentCoreLogic: Successfully processed execution {executionId}");
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"AgentCoreLogic: Error processing execution {executionId}: {ex.Message}");
                    }
                }
            }
            finally
            {
                lock (_queueLock)
                {
                    _isProcessing = false;
                }
            }
        }

        /// <summary>
        /// Clears all queued executions
        /// </summary>
        public static void ClearQueue()
        {
